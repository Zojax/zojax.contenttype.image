<tal:block i18n:domain="zojax.contenttypes" tal:define="url context/@@absolute_url">
  <br />
  <span class="discreet" i18n:translate="">Name:</span>
  <tal:block content="context/__name__" />
  (<a tal:attributes="href url" i18n:translate="">View</a>)
  <br />
  <span class="discreet" i18n:translate="">Size:</span>
  <tal:block i18n:translate="" content="view/size" />

  <div tal:condition="view/size">
    <br />
    <img tal:attributes="src url" />
  </div>
</tal:block>
